<div class="editModal">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" ng-click="close()"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
			<h3 class="modal-title" id="lineModalLabel">Edit</h3>
		</div>
		<form>
		<div class="modal-body">
			
            <!-- content goes here -->

              <div class="form-group">
                <label for="exampleInputFile">Profile Picture</label>
				  <input name="image" type="file" class="file" onchange="angular.element(this).scope().saveFile(this.files, true)" data-show-preview="true">

				  <p class="help-block" ng-hide="currentUser && currentUser.avatarPointer">Please upload profile picture</p>
              </div>
			  <div class="form-group">
                <label for="exampleInputFile">Cover Picture</label>
                <input name="image" type="file" class="file" onchange="angular.element(this).scope().saveFile(this.files, false)" data-show-preview="true">
                <p class="help-block" ng-show="currentUser" ng-hide="currentUser && currentUser.backdropPointer" >Please upload cover picture</p>
              </div>


		</div>
		<div class="modal-footer">
			<div class="btn-group btn-group-justified" role="group" aria-label="group button">
				<div class="btn-group" role="group">
					<button type="button" class="btn btn-default" ng-click="close()" role="button">Close</button>
				</div>
				<div class="btn-group btn-delete hidden" role="group">
					<button type="button" id="delImage" class="btn btn-default btn-hover-red" role="button">Cancel</button>
				</div>
				<div class="btn-group" role="group">
					<button type="submit" id="saveImage" ng-click="submit()" class="btn btn-default btn-hover-green" data-action="save" ng-click="submit()" role="button">Save</button>
				</div>
			</div>
		</div>
		</form>
	</div>
</div>