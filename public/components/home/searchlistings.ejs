<!--------------------->

<div class="container">

    <!-- Search -->

    <div class="col-md-10 col-md-offset-2">
        <form action="" class="search-form">
            <div class="form-group has-feedback">
                <label for="search" class="sr-only">Search</label>
                <input type="text" class="form-control" name="search" id="search" placeholder="search">
                <span class="glyphicon glyphicon-search form-control-feedback"></span>
            </div>
        </form>
    </div>

    <!-- Search end -->


</div>
<!-- /header end -->

<!-- This is one row -->
<div class="container">

    <div class="row bootstrap snippets">

        <div ng-repeat="ad in ads" class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
            <div class="card">
                <div class="thumbnail">
                    <img ng-show="ad.imagePointer" width="360" height="270" src="files/images/{{ad.imagePointer[0]}}" alt="thumbnail">
                    <a href="#" class="thumb-cover"></a>
                    <div class="details">

                        <div class="numbers">
                            <b class="downloads"><i class="fa fa-clock-o"></i>{{ad.createdAt | custDate}}</b>

                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <b class="actions">
                        <a class="btn btn-neutral btn-round btn-fill" href="viewListing?_id={{ad._id}}">{{ad.description}}</a>

                    </b>
                </div>
                <div class="card-info">
                    <a href="#">
                        <h3>{{ad.title}}
                            <div ng-style="((ad.delta = ad.price - ad.ppvPointer.ppv) < 0) ? {color: 'green'}:{color: 'red'}" class="time pull-right">{{ad.price | currency}} {{ad.delta | custDelta}}</div>
                        </h3>
                        <div class="circle-red"><i class="fa fa-circle-o"></i></div>
                        <p>{{qualityOptions[ad.quality - 1].text}} Condition</p>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- / We need about 3 a page -->


</div>
